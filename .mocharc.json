{
    "require": "ts-node/register",
    "loader": "ts-node/esm",
    "check-leaks": true,
    "extensions": [
        "ts",
        "tsx"
    ],
    "spec": [
        "tests/**/*.spec.*"
    ],
    "watch-files": [
        "src"
    ],
    "node-option": [
        "experimental-specifier-resolution=node",
        "loader=ts-node/esm"
    ]
}